<!--  ./views/index.handlebars -->
<div class="container py-5">

  <div class="row">
    <div class="col-12  mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Random TrashTalk Generator <i class="fas fa-book-dead"></i></h5>
          <hr>
          <form method="POST" action="/">
            <div class="d-flex justify-content-around row">
              <div class="form-group">
                <label for="engineer">
                  <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5668/angry-developer.jpg"
                    alt="engineer-image" width="300" height="auto" class="img-responsive">
                </label>
                <label class="radio-inline d-flex justify-content-center mt-2" style="font-size: 20px;">
                  <input type="radio" name="career" value="engineer" id="engineer" class="targets mt-2 mr-2"
                    style="transform: scale(2)" {{#ifEquals career 'engineer'}} checked {{/ifEquals}}>Engineer
                </label>
              </div>

              <div class="form-group">
                <label for="designer">
                  <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5667/angry-designer.jpg"
                    alt="designer-image" width="300" height="auto" class="img-responsive">
                </label>
                <label class="radio-inline d-flex justify-content-center mt-2" style="font-size: 20px;">
                  <input type="radio" name="career" value="designer" id="designer" class="targets mt-2 mr-2"
                    style="transform: scale(2)" {{#ifEquals career 'designer'}} checked{{/ifEquals}}>Designer
                </label>
              </div>

              <div class="form-group">
                <label for="entrepreneur">
                  <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5669/angry-founder.jpg"
                    alt="entrepreneur-image" width="300" height="auto" class="img-responsive">
                </label>
                <label class="radio-inline d-flex justify-content-center mt-2" style="font-size: 20px;">
                  <input type="radio" name="career" value="entrepreneur" id="entrepreneur" class="targets mt-2 mr-2"
                    style="transform: scale(2)" {{#ifEquals career 'entrepreneur'}} checked{{/ifEquals}}>Entrepreneur
                </label>
              </div>
            </div>
            <div class="d-flex justify-content-star row">
              <div class="form-group col-2">
                <div class="d-flex justify-content-center">
                  <button type="submit" class="btn btn-primary">產生幹話</button>
                </div>
              </div>
              <div class="form-group col-8">
                <div class="d-flex justify-content-center">
                  <textarea class="form-control" rows="1" id="generate-text"
                    placeholder="Rubbish talk will generate here">{{sentence}}</textarea>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>